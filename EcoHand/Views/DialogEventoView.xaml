<UserControl x:Class="EcoHand.Views.DialogEventoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EcoHand.Views"
             mc:Ignorable="d" 
                     d:DesignHeight="200" d:DesignWidth="300"
                    MaxHeight="300"
                    MaxWidth="400"
             >

    <Grid Background="White" Margin="25,0,0,0">
        <TextBlock x:Name="Mensaje" HorizontalAlignment="Left" Margin="30,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-1.02,-0.625" Height="26" Width="224"/>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Height="23" Margin="50,57,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="110"/>
        <Button x:Name="Aceptar" Background="LightGray" Content="OK" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80" Margin="50,105,0,0"/>
        <Button x:Name="Cancel" Background="LightGray" Content="Cancelar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="79" Margin="161,105,0,0"/>
    </Grid>

</UserControl>
