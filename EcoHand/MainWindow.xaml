                    <Button Content="Reestablecer" Grid.Column="2" HorizontalAlignment="Left" Margin="153,288,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="Eliminar" Margin="2,-2,-2,0"/>
