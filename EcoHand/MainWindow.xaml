        <!--The HelixViewport3D supports camera manipulation, and can be used just like the Viewport3D-->
        <HelixToolkit:HelixViewport3D ZoomExtentsWhenLoaded="True" Margin="893,58,23,477" Name="m_helix_viewport">


            <!--Remember to add light to the scene-->
            <HelixToolkit:SunLight/>

            <!--The content of this visual is defined in MainViewModel.cs-->
            <ModelVisual3D Content="{Binding our_Model}"/>

        </HelixToolkit:HelixViewport3D>
        <TabControl HorizontalAlignment="Left" Height="520" Margin="163,197,0,0" VerticalAlignment="Top" Width="790">
            <TabItem Header="Listado" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="54">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="72*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox HorizontalAlignment="Left" Height="248" Margin="10,10,0,0" VerticalAlignment="Top" Width="286" SelectionChanged="ListBox_SelectionChanged" Grid.ColumnSpan="3"/>
                </Grid>

            </TabItem>
            <TabItem Header="Nuevo" HorizontalAlignment="Left" Width="51" Height="22" Margin="0,-2,-2,0" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="739*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Nombre: " Grid.Column="1" HorizontalAlignment="Left" Margin="30,40,0,0" VerticalAlignment="Top"/>
                    <Label Content="Pulgar: " Grid.Column="1" HorizontalAlignment="Left" Margin="30,70,0,0" VerticalAlignment="Top"/>
                    <Label Content="Indice: " Grid.Column="1" HorizontalAlignment="Left" Margin="30,101,0,0" VerticalAlignment="Top"/>
                    <Label Content="Mayor: " Grid.Column="1" HorizontalAlignment="Left" Margin="30,132,0,0" VerticalAlignment="Top"/>
                    <Label Content="Anular: " Grid.Column="1" HorizontalAlignment="Left" Margin="30,167,0,0" VerticalAlignment="Top"/>
                    <Label Content="Meñique: " Grid.Column="1" HorizontalAlignment="Left" Margin="30,198,0,0" VerticalAlignment="Top"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="108,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Slider Value="{Binding pulgar_proximal_angle}" Grid.Column="1" HorizontalAlignment="Left" Maximum="45" Minimum="0" Margin="108,70,0,97"/>
                    <Slider Value="{Binding indice_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="130,407,884,0" />
                    <Slider Value="{Binding mayor_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="130,441,884,0"/>
                    <Slider Value="{Binding anular_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="130,475,884,0"/>
                    <Slider Value="{Binding meñique_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="130,509,884,0"/>
                    <!--<Label Content="Label" HorizontalAlignment="Left" Margin="367,138,0,0">Pulgarr:</Label>-->
                </Grid>
            </TabItem>
            <TabItem Header="Editar" Margin="2,-2,-2,0"/>


            <TabItem Header="Eliminar" Margin="2,-2,-2,0"/>
        </TabControl>
        
    </Grid>
</Window>
