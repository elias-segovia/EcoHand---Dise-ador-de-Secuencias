        <Label DockPanel.Dock="Left" FontWeight="Bold" Margin="474,115,657,631">Indice:</Label>
        <Slider Value="{Binding indice_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="535,109,479,0" />
        --><!--<Slider Value="{Binding indice_distal_angle}" Maximum="45" Minimum="0" Height="29" Width="400" VerticalAlignment="Top" Margin="560,154,534,0" />--><!--
        <Label DockPanel.Dock="Left" FontWeight="Bold" Margin="474,138,657,602">Mayor:</Label>
        <Slider Value="{Binding mayor_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="535,138,479,0"/>
        --><!--<Slider Value="{Binding mayor_distal_angle}" Maximum="45" Minimum="0" Height="29" Width="400" VerticalAlignment="Top" Margin="560,184,534,0" />--><!--
        <Label DockPanel.Dock="Left" FontWeight="Bold" Margin="474,164,662,580">Anular:</Label>
        <Slider Value="{Binding anular_proximal_angle}" Maximum="45" Minimum="0" Height="29" VerticalAlignment="Top" Margin="535,165,479,0"/>
